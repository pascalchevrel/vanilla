{% extends 'base.html.twig' %}
{% block head_additions %}
  {% set meta_description = 'This is the homepage' %}
    <meta name="description" content="{{ meta_description }}">
{% endblock %}


{% block header %}
  <h1 class="text-center fw-semibold">Vanilla project<br><small class="fs-4 fw-normal mt-0 pt-1">A study of Firefox in Sourthern Europe</small></h1>
{% endblock %}

{% block main %}
<table class="table table-sm w-75 justify-content-center">
    <caption>All countries studied</caption>
    <tbody>
        <tr>
            <th>Total population of countries studied:</th>
            <td class="text-end">{{ data.population|number_format }}</td>
        </tr>
        <tr>
            <th>Addressable Desktop market (2025)</th>
            <td class="text-end">{{ data.desktopPotentialMarket()|number_format }}</td>
        </tr>
    </tbody>
</table>


{% endblock %}

{% block footer %}
{% endblock %}
